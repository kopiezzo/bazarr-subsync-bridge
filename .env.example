# Core paths
# Host path where your media lives. Must match paths visible to Bazarr jobs.
MEDIA_HOST_PATH=/path/to/media
MEDIA_CONTAINER_PATH=/media

# Queue and logs on host (relative paths are allowed)
QUEUE_HOST_PATH=./queue
LOGS_HOST_PATH=./logs

# Runtime behavior
QUEUE_DIR=/queue
LOG_DIR=/logs
SUBSYNC_LOG_LEVEL=1
SUBSYNC_EFFORT=0.5
SUBSYNC_MAX_WINDOW=600
SUBSYNC_MIN_CORRELATION=0.5
SUBSYNC_KEEP_BACKUP=0

# Plex integration (optional)
PLEX_URL=
PLEX_TOKEN=
PLEX_SECTION_SHOWS=1
PLEX_SECTION_MOVIES=2
